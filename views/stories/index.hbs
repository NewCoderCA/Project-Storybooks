<h1>Public stories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card-image">

      </div>
      <div class="card-content center-align">
        <h4>{{title}}</h4>
        <p>{{stripTags (truncate body 125)}}</p>
        <div class="chip">
          <img src="{{user.image}}" alt="Image of the user in a badge" />
          <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
        </div>
      </div>
      <div class="card-action center-align">
        <a href="/stories/{{_id}}" class="btn grey">Read more...</a>
        <a href="/stories/edit/{{_id}}" class="btn blue">Edit</a>
      </div>
    </div>
  {{else}}
    <p>No public stories to display, try again later!</p>
  {{/each}}

</div>